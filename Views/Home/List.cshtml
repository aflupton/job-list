<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Jobs List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      <h1 class="Display-1"><em>Work History List App</em></h1>
      <h3><em>List items:</em></h3>
      <div class="row">
        <div class="col-md-4">
          <ul>
              @{var count = 0;}
              @foreach(var item in Model)
              {
                count++;
                <div class="row">
                    <h4><strong>List instance: #@count</strong></h4>
                    <p><em><strong>Job Title: </strong></em>@item.GetName()</p>
                    <p><em><strong>Dates in job: </strong></em>@item.GetDate()</p>
                    <p><em><strong>Keywords: </strong></em>@item.GetKeyword()</p>
                    <p><em><strong>Description: </strong></em>@item.GetDescription()</p>
                    <p><strong>@Html.ActionLink("Delete", "Delete", new
                      {id=@item.GetId()})</strong></p>
                </div>
                <br>
                <br>
              }
          </ul>
        </div>
        <div class="col-md-4">
          <button type='submit' class='btn btn-info'><a href="/create"><em>Add another job</em></a></button>
          <button type='submit' class='btn btn-info'><a href="/"><em>Home</em></a></button>
        </div>
      </div>
    </div>
  </body>
</html>
